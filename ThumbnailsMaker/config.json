{
	"$schema": "./config-schema.json",
	"output": {
		"directory": "./output",
		"imageFormat": "png",
		"jpegQuality": 75
	},
	"fitToBackgroundImageSize": false,
	"imageWidth": 1200,
	"imageHeight": 675,
	"background": {
		"imagePath": "./images/autofac.png",
		"texts": [
			{
				"enabled": true,
				"message": "BIG TEXT",
				"horizontalAlignment": "left",
				"antialias": true,
				"wrapTextWidth": 900,
				"font": {
					"path": "./fonts/BebasNeue-Regular.ttf",
					"size": 130,
					"positionCorrection": 0,
					"color": [
						255,
						255,
						255
					]
				},
				"position": {
					"x": 200,
					"y": 200,
					"horizontalAlignment": "center",
					"useHorizontalAlignment": true
				},
				"shadow": {
					"enabled": true,
					"shiftRight": 3,
					"shiftDown": 3,
					"color": [
						147,
						112,
						219
					],
					"sizeShift": 0
				},
				"line": {
					"enabled": true,
					"size": {
						"height": 10,
						"width": 600
					},
					"position": "bottom",
					"horizontalAlignment": "left",
					"color": [
						255,
						255,
						255
					],
					"shadow": {
						"enabled": true,
						"shiftRight": 3,
						"shiftDown": 3,
						"color": [
							147,
							112,
							219
						],
						"sizeShift": 0
					}
				}
			},
			{
				"enabled": true,
				"message": "and small text",
				"horizontalAlignment": "right",
				"antialias": true,
				"wrapTextWidth": 900,
				"font": {
					"path": "./fonts/BebasNeue-Regular.ttf",
					"size": 80,
					"positionCorrection": 0,
					"color": [
						255,
						255,
						255
					]
				},
				"position": {
					"x": 200,
					"y": 400,
					"useHorizontalAlignment": true
				},
				"shadow": {
					"enabled": true,
					"shiftRight": 3,
					"shiftDown": 3,
					"color": [
						147,
						112,
						219
					],
					"sizeShift": 0
				},
				"line": {
					"enabled": true,
					"size": {
						"height": 5,
						"width": 600
					},
					"position": "bottom",
					"horizontalAlignment": "right",
					"color": [
						255,
						255,
						255
					],
					"type": "double",
					"shadow": {
						"enabled": true,
						"shiftRight": 3,
						"shiftDown": 3,
						"color": [
							147,
							112,
							219
						],
						"sizeShift": 0
					}
				}
			}
		],
		"lines": [
			{
				"enabled": false,
				"width": 400,
				"height": 10,
				"color": [
					255,
					255,
					255,
					100
				],
				"position": {
					"x": 200,
					"y": 200,
					"horizontalAlignment": "center"
				}
			}
		],
		"filters": {
			"sepia": {
				"enabled": false,
				"order": 1,
				"amount": 1
			},
			"blackWhite": {
				"enabled": false,
				"order": 1
			},
			"invert": {
				"enabled": false,
				"order": 1
			},
			"polaroid": {
				"enabled": false,
				"order": 1
			},
			"grayscale": {
				"enabled": true,
				"order": 1,
				"amount": 1
			},
			"contrast": {
				"enabled": false,
				"order": 1,
				"amount": 8
			},
			"lomograph": {
				"enabled": false,
				"order": 1
			},
			"saturate": {
				"enabled": false,
				"order": 1,
				"amount": 15
			},
			"gaussianBlur": {
				"enabled": false,
				"order": 1,
				"amount": 4
			},
			"pixelate": {
				"enabled": false,
				"order": 1,
				"size": 4
			},
			"brightness": {
				"enabled": false,
				"order": 1,
				"amount": 2
			}
		}
	},
	"bars": [
		{
			"enabled": true,
			"height": 80,
			"position": "left",
			"text": ".Net Core",
			"textAlignment": "center",
			"font": {
				"path": "./fonts/BebasNeue-Regular.ttf",
				"size": 60,
				"positionCorrection": 8,
				"color": [
					255,
					0,
					255,
					255
				]
			},
			"antialias": true,
			"backgroundColor": [
				176,
				36,
				255,
				155
			]
		},
		{
			"enabled": false,
			"height": 100,
			"position": "bottom",
			"text": "I like it",
			"printCurrentDateTime": true,
			"dateTimeFormat": "yyyy MMMM dd",
			"textAlignment": "center",
			"textPaddingLeftRight": 10,
			"font": {
				"path": "./fonts/BebasNeue-Regular.ttf",
				"size": 60,
				"positionCorrection": 8,
				"color": [
					255,
					60,
					250,
					30
				]
			},
			"antialias": true,
			"backgroundColor": [
				160,
				160,
				160,
				35
			]
		}
	]
}